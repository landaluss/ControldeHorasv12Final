<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="60dp"
    android:id="@+id/rlMain"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".LoginActivity"
    android:background="@drawable/degradado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/rlLogo">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_app"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/rlLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlPhone"
        android:paddingTop="50dp">

        <EditText
            android:id="@+id/EtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_user_email"
            android:drawablePadding="10dp"
            android:selectAllOnFocus="true"
            android:padding="10dp"
            android:shadowRadius="20"
            android:textColor="#FFF"
            android:textColorHint="#fff"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/rlWeb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlPhone"
    android:layout_centerHorizontal="true"
    android:paddingTop="20dp">

    <EditText
        android:id="@+id/EtClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="10dp"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:padding="10dp"
        android:shadowRadius="20"
        android:textColor="#FFF"
        android:textColorHint="#fff"
        android:textSize="25dp" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/llwitchRemenber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlWeb"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp">

        <Switch
            android:id="@+id/switchRemember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recordar datos "
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/rlbtn"
        android:layout_below="@+id/llwitchRemenber"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:textColor="#484848"
            android:padding="12dp"
            android:text="LOG IN"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:id="@+id/recontra"
        android:layout_below="@+id/rlbtn"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRecibirCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Recuperar Correo"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>